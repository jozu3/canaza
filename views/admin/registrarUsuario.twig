{% extends 'admin/index.twig' %}

{% block sectionrigth %} 
	{% if errors%}
		{% include('partials/errors.twig') %}
	{% endif %}
	{% if result %}
		<div class="alert alert-success">Usuario guardado.!</div>
	{% endif %}
	<form method="post">
		<div class="form-group">
			<label for="nombre">Nombre:</label>
			<input type="text" class="form-control" name="us_nombre" id="nombre">
		</div>
		<div class="form-group">
			<label for="apellido">Apellido:</label>
			<input type="text" class="form-control" name="us_apellido" id="apellido">
		</div>
		<div class="form-group">
			<label for="dni">DNI:</label>
			<input type="number" class="form-control" name="us_dni" id="dni">
		</div>
		<div class="form-group">
			<label for="telefono">Telefono:</label>
			<input type="text" class="form-control" name="us_telefono" id="telefono">
		</div>
		<div class="form-group">
			<label for="email">Email:</label>
			<input type="text" class="form-control" name="us_email" id="email">
		</div>
		<div class="form-group">
			<label for="cargo">cargo:</label>
			<select type="text" class="form-control" name="us_cargo" id="cargo">
				<option value="1">1</option>
			</select>
		</div>
		<div class="form-group">
			<label for="usuario">Usuario:</label>
			<input type="text" class="form-control" name="us_usuario" id="usuario">
		</div>
		<div class="form-group">
			<label for="password">Password:</label>
			<input type="password" class="form-control" name="us_password" id="password">
		</div>
		<div class="form-check">
			<label class="form-check-label">
		 	<input class="form-check-input" type="checkbox"> Remember me
			</label>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
{% endblock %}